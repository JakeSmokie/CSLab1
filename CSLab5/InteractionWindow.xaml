<Window x:Class="CSLab5.InteractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSLab5"
        mc:Ignorable="d"
        Title="Window2" Height="900" Width="900"
        KeyDown="Window_KeyDown">
    <Grid>
        <ListBox Name="operationsHistory" 
                 MouseDoubleClick="operationsHistory_MouseDoubleClick"
                 HorizontalAlignment="Left" 
                 Height="634" 
                 Margin="10,10,0,0" 
                 VerticalAlignment="Top" 
                 Width="312">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="16" Text="{Binding Path = Text}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
